doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF|Stocktable
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/stock.css')
.container.my-5.mt-6
  h3 Stock Records
  table.table.table-striped.table-bordered
    thead.table-dark
      tr
        th(scope='col') Product  Name
        th(scope='col') Product Type
        th(scope='col') Quantity 
        th(scope='col') Cost Price (UGX)
        th(scope='col') Selling Price (UGX)
        th(scope='col') Supplier Name 
        th(scope='col') Date
        th(scope='col') Quality 
        th(scope='col') Color
        th(scope='col') Measurements
        th(scope='col') Status 
        th(scope='col') Update 
        th(scope='col') Delete
    tbody
      if items.length 
        each item in items 
          tr 
            td #{item.productName}
            td #{item.productType}
            td #{item.quantity}
            td #{item.costPrice}
            td #{item.sellingPrice}
            td #{item.supplierName}
            td #{moment(item.datebought).format("DD-MM-YYYY")}
            td #{item.quality}
            td #{item.color}
            td #{item.measurements}
            //- if item.quantity <= 20
            //-   td.alert.alert-danger low stock (#{item.quantity} left)
            td 
              if item.quantity <= 5
                span.btn.btn-warning Low Stock
              else 
                span.btn.btn-warning In Stock  
            td
              a.btn.btn-warning(href=`/editstock/${item._id}`) Edit
            td 
              form(method='post' action="/deletestock")
                input(type="hidden" name='id' value=item._id)
                button.btn.btn-danger.btn-block(type='sumbit') Delete
  a.btn.btn-dark.mt-3(href='/stock') Add New Stock
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
