doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF|Receipt
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/stock.css')
.container.my-5.mt-6
  h2.text-center  MAYONDO WOOD AND FURNITURE LIMITED 
  p.text-center A B2B Wood and Furniture Company
  hr
  
  h3.text-center RECEIPT 
  p Date: #{moment(sale.paymentdate).format("DD-MM-YYYY")}
  p Customer: #{sale.customername }
  p Sales Agent: #{sale.salesAgent.fullName}

  table.table
    thead
        tr
            th(scope='col') Product Type
            th(scope='col') Product Name
            th(scope='col') Quantity
            th(scope='col') Unit Price
            th(scope='col') Transport
            th(scope='col') Total Price  
    tbody
        tr 
            td #{sale.producttype }
            td #{sale.product }
            td #{sale.quantity }
            td #{sale.unitPrice }
            td #{sale.transportCheck}
            td #{(sale.totalPrice)}
             
    p Payment Method: #{(sale.paymentMethod)}  
    hr
    h4.text-center Thank you for your Purchase.

    button(onclick="window.print()" class='btn btn-primary') Print Receipt        

  
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
