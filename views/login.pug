doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='css/form.css' rel='stylesheet')
.container
  h2.mb-4 Register Form
  form(action='/login' method='post')
   
    .mb-3
      label.form-label(for='email') Email:
      input#email.form-control(type='email' name='email' placeholder='Email' required='')
      .invalid-feedback Please enter a valid email.
    .mb-3
      label.form-label(for='password') Password:
      input#password.form-control(type='password' name='password' placeholder='Password' required='')
      .invalid-feedback Please enter a valid password.
    
    button.btn(type='submit') Login 
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js')
